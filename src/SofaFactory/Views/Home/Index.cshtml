@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/slides/sofa2b_grande_cny.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/slides/slideshow_6.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h2>THE SOFA MAESTRO</h2>
                <p>
                    Offering premium customised sofa's to discerning customers in Australia and Singapore. Visit our showroom for a private consultation and fitting session.
                </p>
                <button type="button" class="btn btn-default btn-slide">Learn More</button>
            </div>
        </div>
        <div class="item">
            <img src="~/images/slides/slideshow_2.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/slides/slideshow_3.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="jumbotron home-statement">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h4>If quality is what you seek, then there is no better place than Sofa Factory Outlet. We emphasize on using the best quality available for the manufacturing of our sofa sets. We also do customization and modifications. <br /> At Sofa Factory Outlet, we convert your house into your dream home.</h4>
            </div>
        </div>
    </div>
</div>





